{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":dependencyDashboard"
  ],
  "schedule": [
    "after 11pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "reviewers": [
    "team:infra"
  ],
  "assignAutomerge": true,
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "automerge": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "go"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
